<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/primaryDark"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageViewHeaderLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/white_logo"
        android:contentDescription="Logo do Cheers"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/textViewHeaderAppName"
        style="@style/CheersTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cheers!"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/textViewHeaderEmail"
        style="@style/CheersTextSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="seu_email@email.com"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:alpha="0.8" />

</LinearLayout>